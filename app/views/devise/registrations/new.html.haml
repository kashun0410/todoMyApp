.account-page
  = render "devise/shared/header"
  .account-page__content
    .contents
      %h2.contents__head
        会員情報の入力
      = form_for(resource, as: resource_name,  url:registration_path(resource_name)) do |f|
        .field
          .field__label
            = f.label :name, "ニックネーム"
          .field__input
            = f.text_field :name, placeholder: '例)フリマ太郎', autofocus: true
        .field
          .field__label
            = f.label :email
          .field__input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .field
          .field__label
            = f.label :password
          .field__input
            = f.password_field :password, placeholder: '英数字8文字以上', autocomplete: "off"
        .field
          .field__label
            = f.label :password_confirmation
          .field__input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Create Account", class: 'action'
